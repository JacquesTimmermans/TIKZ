% Legenda Pontos
%

\node at (\xA-\h,\yA-\h) {$\mathbf{C}$};
\node at (\xB-\h,\yB+\h) {$\mathbf{B}$};
\node at (\xC+\h,\yC-\h) {$\mathbf{A}$};
\node at (\xD,\yD-\h) {$\mathbf{D}$};
%\node at (\xE,\yE+\h) {$\mathbf{E}$};
\node at (0.5*\xC+2*\h,\yC-\h) {$\mathbf{b}$};
\node at (0.5*\xA+0.5*\xB-\h,0.5*\yA+0.5*\yB) {$\mathbf{a}$};
%\node at (\xF,\yF-\h) {$\mathbf{F}$};
\node at (0.5*\xB+0.5*0.5*\xC-3*\h,0.5*\yB) {$\mathbf{x}$};
\node at (0.5*\xD+0.5*0.5*\xC+\h,0.5*0.5*\yB) {$\mathbf{y}$};
\node at (\xE+2*\h,\yE) {$\mathbf{c}$};
\node at (\xD-1.7*\h,\yD+0.8*\h) {$\mathbf{\theta}$};
\node at (\xD+1.7*\h,\yD+0.8*\h) {$\mathbf{\theta}$};

