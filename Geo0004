\def\l{2} % espessura linha
\def\a{6} % lado triângulo
\def\b{9} % lado 
triângulo
\def\h{0.4} % desvio legenda
\def\r{.5} % raio

\def\xA{0}
\def\yA{0}

\def\xB{0}
\def\yB{\a}

\def\xC{\b}
\def\yC{0}

\def\xD{3}
\def\yD{0}

\def\xE{0.5*\b}
\def\yE{0.5*\a}

\def\xF{0.5*\b}
\def\yF{0}

%
% Construções
% 

\draw[black, fill = pink, line width=\l pt] (\xA,\yA) -- (\xB,\yB) --(\xC,\yC) -- cycle; 

%\draw[orange, line width=\l pt] (0.5*\xC,0) -- (0.5*\xC,0.5*\yB) -- cycle; 

